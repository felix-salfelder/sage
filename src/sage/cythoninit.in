#!/bin/sh

message=$( cat <<EOF
ouch. this is a fake to outsmart cython:
cython only allows package-dirs contain pyx files and doesn't respect -I.
package dirs must contain __init__.{py,pyx,pxd}, see Utils.py:140

usually pyx files are within @srcdir@, which has a __init__.py.
autogenerated files are not necessarily within @srcdir@!
EOF
)

# all paths?
# just these for now
extra_modules='. ext ext/interpreters'

for i in $extra_modules; do
	fakeinit=$i/__init__.py
	[ -d $i ] || mkdir -p $i
	# need to copy. the target is the one that gets installed
	[ -e $fakeinit ] || cp @srcdir@/$i/__init__.py $i
done
