#!/usr/bin/env bash

if [ "$SAGE_SHARE" = "" ]; then
   echo "SAGE_SHARE undefined ... exiting";
   echo "Maybe run 'sage -sh'?"
   exit 1
fi

POLYTOPES_DATA_DIR="$SAGE_SHARE/reflexive_polytopes"
sage-dist-install --record "$FILELIST" -d "$POLYTOPES_DATA_DIR/Full2d"
sage-dist-install --record "$FILELIST" -t "$POLYTOPES_DATA_DIR/Full2d" src/Full2d/*
sage-dist-install --record "$FILELIST" -d "$POLYTOPES_DATA_DIR/Full3d"
sage-dist-install --record "$FILELIST" -t "$POLYTOPES_DATA_DIR/Full3d" src/Full3d/*
